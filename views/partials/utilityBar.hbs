                <a href="#" class="searchType" rel="nofollow">
                    <span class="glass"></span>&nbsp;<span class="searchArrow"></span>
                </a>
                <div class="searchTypeDropDown dropDown" style="display: none">
                    <ul>
                    </ul>
                </div>
            </div>
